@model IEnumerable<Lab2_KASR_MAGZ.Models.Medicine>

@{
    ViewData["Title"] = "Index";
}

<h1>Tu Salud en mis Manos</h1>
<b>IMPORT FILE</b>
<form asp-controller="Health" asp-action="Index" method="post" enctype="multipart/form-data">
    <input type="file" name="postedFile" value="" />
    <input type="submit" value="Import" />
</form>
<br />
<b>ENTER NEW PURCHASE</b>
<form asp-controller="Purchase" asp-action="Index">
    <input type="submit" value="Buy" />
</form>
<br />
<b>SUPPLY MEDCINES</b>
<form asp-controller="Health" asp-action="NewRessuply">
    <input type="submit" value="Resupply" />
</form>
<br />
<p><b>SHOW PreOrder/InOrder/PostOrder</b></p>
<form asp-controller="Health" asp-action="ListPre">
    <input type="submit" value="Pre-Order" />
</form>
<br />
<form asp-controller="Health" asp-action="ListIn">
    <input type="submit" value="In-Order" />
</form>
<br />
<form asp-controller="Health" asp-action="ListPost">
    <input type="submit" value="Post-Order" />
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductionHouse)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stock)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductionHouse)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Stock)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                    @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                    @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                </td>
            </tr>
        }
    </tbody>
</table>
